<div class="container">
    <h1>Show Article</h1>

    <% flash.each do |type, msg| %>
        <div>
        <%= msg %>
        </div>
        <br>
    <% end %>

    <p>
    <strong>Title:</strong>
    <%= @article.title %>
    </p>

    <p>
    <strong>Author:</strong>
    <%= @article.author %>
    </p>

    <p>
    <strong>Text:</strong>
    <%= @article.text %>
    </p>

    <p>
    <strong>Time:</strong>
    <%= @article.created_at %>
    </p>

    <%= link_to 'List Articles', articles_path() %>
</div>